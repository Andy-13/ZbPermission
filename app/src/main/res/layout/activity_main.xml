<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.unistrong.yang.zbpermissionlibrary.MainActivity">

    <Button
        android:id="@+id/bt_request_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bt_request_contact"
        android:text="CAMERA"
        android:layout_centerHorizontal="true"/>
    <Button
        android:id="@+id/bt_request_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact"
        android:layout_centerInParent="true"
        />
    <Button
        android:id="@+id/bt_request_storage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STORAGE"
        android:layout_below="@+id/bt_request_contact"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
